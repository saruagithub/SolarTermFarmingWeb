<view class='newSeed'>
  <form bindsubmit=''>
  <!-- chose type -->
    <view class='section'>
      <view class="section_title">类型</view> 
      <view class='form-group'>  
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{aspect_array}}">  
              <view class="picker">  
                <input type="hidden" disabled="true" name="addr" value="{{aspect_array[index]}}"/>  
              </view>  
          </picker>  
      </view> 
    </view>
    <!-- input goal -->
    <view class='section'>
      <view class="section_title">目标</view>  
      <view class='form-group'>  
        <input type="text" class="input-text" name="seedtitle"/>  
      </view>  
    </view>
    <!-- chose due_time -->
    <view class='section'>
      <view class="section_title">截止时间</view> 
      <view class='form-group'>
         <radio-group name="gender">  
            <label><radio value="1"/>本周</label>  
            <label><radio value="2"/>本月</label> 
            <label><radio value="3"/>今年</label>  
          </radio-group>  
      </view> 
    </view>
    <view class='content_section'>
      <view class="section__title">内容</view>
        <view class="textarea-wrp">
          <textarea bindblur="bindTextAreaBlur" auto-height />
        </view>
    </view>
  </form>
</view>
<view class='btn'>
  <navigator url="../index/index">
    <image src='../image/finish_btn.png'></image>
  </navigator>
</view>