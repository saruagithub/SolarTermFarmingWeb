.newSeed{
  height: 85%;
}
.section{
  width: 100%;
  height: 110rpx;
  display: flex;
  padding: 10rpx 40rpx;
  border-bottom: 2rpx solid #EEE;
}
.section .section_title{
  width: 160rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  float: left;
  line-height: 100rpx;
}
.section .content_section{
  width: 100%;
  height: 600rpx;
  display: flex;
  padding: 10rpx 40rpx;
}
.section-line{
  border-top: 2rpx solid #EEE;
}
.content_section .section_title{
  width: 100%;
  height: 100rpx;
  padding-left: 50rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.content_section .textarea{
  width: 100%;
  height: 400rpx;
  padding: 10rpx 50rpx;
  font-size: 10pt;
}
.form_group{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  line-height: 100rpx;
}
.picker{
  width: 400rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  line-height: 100rpx;
  float: left;
}
.pulldownbtn{
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin-right: 40rpx;
  margin-top: 20rpx;
}
.input-text{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.due_date{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.due_date label{
  margin-right: 20rpx;
}
.ui-radio radio,.ui-radio checkbox {
  display: none;
}
.ui-radio .text {
  color: black;
/*设计样式*/
}
.ui-radio.active .text{
  color: #13D1BE;
/*设计样式*/
}
.btn{
  position: fixed;
  top: 89%;
  left: 84%;
  width: 140rpx;
  height: 140rpx;
  border: none;
} 
