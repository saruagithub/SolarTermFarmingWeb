.newSeed{
  height: 85%;
}
.section{
  width: 100%;
  height: 110rpx;
  display: flex;
  padding: 10rpx 40rpx;
  border-bottom: 2rpx solid #EEE;
}
.section .section_title{
  width: 160rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  float: left;
  line-height: 100rpx;
}
.section .content_section{
  width: 100%;
  height: 600rpx;
  display: flex;
  padding: 10rpx 40rpx;
}
.content_section .section_title{
  width: 100%;
  height: 100rpx;
  padding-left: 50rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.content_section textarea{
  width: 100%;
  height: 500rpx;
  padding: 10rpx 50rpx;
  font-size: 10pt;
}
.form_group{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  line-height: 100rpx;
  float: right;
}
.picker{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.input-text{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.due_date{
  width: 500rpx;
  height: 100rpx;
  margin: 0 10rpx;
  font-size: 12pt;
  line-height: 100rpx;
}
.due_date label{
  margin-right: 10rpx;
}
.btn{
  position: fixed;
  top: 90%;
  left: 85%;
  width: 110rpx;
  height: 110rpx;
  border: none;
} 
